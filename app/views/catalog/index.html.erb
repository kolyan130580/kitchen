<script type="text/javascript">
    $(document).ready(function() {
        var slider = $('#slider-2').bxSlider({
            pager: false,
            controls: true,
            infiniteLoop: false,
            displaySlideQty: 4,
            prevText: 'НАЗАД',
            nextText: 'ВПЕРЕД',
            onNextSlide: function(currentSlideNumber, totalSlideQty, currentSlideHtmlObject){
                if(currentSlideNumber >= totalSlideQty-3){
                    slider.goToFirstSlide() ;
                }
            }
        });
        $("a[data-gal^='prettyPhoto']").prettyPhoto({theme:'facebook'});
        if(slider.getSlideCount() < 5){
            $('.bx-next').css("display", "none");
            $('.bx-prev').css("display", "none");
        }
    }); 
</script>
