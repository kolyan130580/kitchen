<section id="content">
    <div class="main">
        <div class="wrapper">
            <h3 class="prev-indent-bot">Специальные предложения</h3>
            <% @special_offers.each do |offer| %>
            <div class="wrapper img-indent-bot" style="margin: 0;">
                <figure class="img-indent"><img src="<%= offer.image.url(:thumb) %>" alt=""></figure>
                <div class="extra-wrap">
                    <h5><%= offer.name %></h5>
                    <%= offer.description %>
                </div>
                <p class="p2"><strong class="color-2">Цена: <%= offer.price %> грн. / Порция: <%= offer.portion %></strong></p>
                <a class="button-1"  id="btn_basket_<%= offer.id %>" href="javascript:void(0);">Добавить в корзину</a>
            </div> 
            <hr style="margin: 12px 0;">
            <% end %>   
        </div>
    </div>
</section>        