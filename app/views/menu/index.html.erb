<script type=/"text/javascript">
    $(document).ready(function() {
        var slider = $('#slider').bxSlider({
            pager: false,
            controls: true,
            infiniteLoop: false,
            displaySlideQty: 3,
            prevText: 'НАЗАД',
            nextText: 'ВПЕРЕД',
            onNextSlide: function(currentSlideNumber, totalSlideQty, currentSlideHtmlObject){
                if(currentSlideNumber >= totalSlideQty-2){
                    slider.goToFirstSlide() ;
                }
            }
        });
        if(slider.getSlideCount() < 4){
            $('.bx-next').css("display", "none");
            $('.bx-prev').css("display", "none");
        }
    });  
</script>
